{
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "paths": {
            "@Library/*": ["src/Library/*"],
            "@Common/*": ["src/Library/Common/*"],
            "@DataObjects/*": ["src/Library/Common/DataObjects/*"],
            "@Global/*": ["src/Library/Global/*"],
            "@Backend/*": ["src/Library/Backend/*"],
            "@Frontend/*": ["src/Library/Frontend/*"],
            "@Interfaces/*": ["src/Library/Common/Interfaces/*"],
            "package.json": ["package.json"],
            "tsconfig.json": ["tsconfig.json"],
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
    ]
}
