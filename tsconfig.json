{
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
    ]
}
